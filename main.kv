<MainScreen>:
    name: 'main'
    counter: counter
    motorToggle: motorToggle


    FloatLayout:
        size_hint: None, None

    Slider:
        id: position
        min: 0
        max: 100
        step: 0.5
        orientation: 'vertical'
        sensitivity: 'handle'
        value_track_color: [1, 0.39, 0.39, 1]
        value_track_width: 20
        padding: 100
        x: root.width * -0.4
        y: root.height * 0.1


    DPEAButton:
        id: switchButton
        halign: 'center'
	    valign: 'middle'
        text:"On" if switchButton.state == "down" else "Off"
        size: 125, 100
        x: root.width * 0.575
        y: root.height * 0.5
        color: 0, 0.7, 0.81, 1


    DPEAButton:
        id: counter
        text: "0"
        size: 125, 100
        x: root.width * 0.795
        y: root.height * 0.5
        color: 0.56, 0.54, 1, 1
        on_release: root.counter_button()

    DPEAButton:
        id: textMotor
        text: "Motor Control"
        size: 300, 100
        x: root.width * 0.575
        y: root.height * 0.1
        color: 0.49, 0.64, 0.12, 1
        on_press: root.motor_control_switch()

    Label:
        id: motorToggle
        font_size: 50
        color: 1, 1, 1, 1
        bold: True
        color: 1, 1, 1, 1
        x: root.width * 0.2625
        y: root.height * -0.125
        outline_width: 5
        outline_color: 0, 0, 0
        text: "Motor Off"

    Label:
        id: positionLabel
        font_size: 50
        color: 1, 1, 1, 1
        bold: True
        x: root.width * -0.4
        y: root.height * -0.375
        outline_width: 5
        outline_color: 0, 0, 0
        text: str(position.value)

    DPEAButton:
        id: colorButton
        color: 1, 0, 0, 1
        text: "GO"
        size: 200, 200
        x: root.width * 0.2
        y: root.height * 0.1
        on_press: root.color_animate()

    ImageButton:
        id: screenButton
        size: 250, 250
        x: root.width * 0.17
        y: root.height * 0.5
        on_press: root.image_transition_anim()
