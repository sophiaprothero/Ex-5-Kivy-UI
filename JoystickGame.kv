<JoystickScreen>:
    name: 'stick'

    button0: button0

    stick_x: stick_x
    stick_y: stick_y

    stick_cursor: stick_cursor

    on_enter: root.start_joy_thread()

    FloatLayout:
        size_hint: None, None
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: root.size
                pos: 0, 0
            Color:
                rgba: 0, 0, 0, 0.8

    DPEAButton
        id: button0
        text: "Off"
        size: 100, 175
        x: root.width * 0.75
        y: root.height * 0.3
        color: 1, 0.5, 0, 1

    DPEAButton:
        id: pauseButton
        halign: 'center'
	    valign: 'middle'
        size: 100, 100
        text: "I I"
        x: root.width * 0.05
        y: root.height * 0.8
        color: 0, 0.7, 0.81, 1
        on_press: root.go_pause()

    Image:
        id: stick_cursor
        source: 'atlas://data/images/defaulttheme/slider_cursor'
        size: self.texture_size

    Label:
        id: stick_x
        font_size: 50
        color: 1, 1, 1, 1
        bold: True
        color: 1, 1, 1, 1
        x: root.width * 0
        y: root.height * -0.4
        outline_width: 5
        outline_color: 0, 0, 0
        text: "x: " + str(root.stick_x_val)

    Label:
        id: stick_y
        font_size: 50
        color: 1, 1, 1, 1
        bold: True
        color: 1, 1, 1, 1
        x: root.width * 0
        y: root.height * -0.3
        outline_width: 5
        outline_color: 0, 0, 0
        text: "y: " + str(root.stick_y_val)

<MainScreen>
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: stickScreenButton
        halign: 'center'
	    valign: 'middle'
        text:"Game ->"
        size: 300, 100
        x: root.width * 0.575
        y: root.height * 0.75
        color: 1, 0.39, 0.39, 1
        on_press: root.stick_go()
