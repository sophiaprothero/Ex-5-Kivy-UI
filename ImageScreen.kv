<ImageScreen>:
    name: 'image'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: colorDisplay
        size: 250, 275
        x: root.width * 0.6
        y: root.height * 0.1
        color: str(redValue.value/100), str(greenValue.value/100), str(blueValue.value/100), 1

    Slider:
        id: redValue
        min: 0
        max: 100
        step: 0.5
        size_hint: None, None
        size: 10, 450
        orientation: 'vertical'
        center: root.width * 0.1, root.height * 0.575

    Label:
        id: redLabel
        font_size: 50
        color: 1, 0, 0, 1
        bold: True
        x: root.width * -0.4
        y: root.height * -0.375
        outline_width: 5
        outline_color: 0, 0, 0
        text: str(redValue.value)

    Slider:
        id: greenValue
        min: 0
        max: 100
        step: 0.5
        size_hint: None, None
        size: 10, 450
        orientation: 'vertical'
        center: root.width * 0.3, root.height * 0.575

    Label:
        id: greenLabel
        font_size: 50
        color: 0, 1, 0, 1
        bold: True
        x: root.width * -0.2
        y: root.height * -0.375
        outline_width: 5
        outline_color: 0, 0, 0
        text: str(greenValue.value)

    Slider:
        id: blueValue
        min: 0
        max: 100
        step: 0.5
        size_hint: None, None
        size: 10, 450
        orientation: 'vertical'
        center: root.width * 0.5, root.height * 0.575

    Label:
        id: blueLabel
        font_size: 50
        color: 0, 0, 1, 1
        bold: True
        x: root.width * 0
        y: root.height * -0.375
        outline_width: 5
        outline_color: 0, 0, 0
        text: str(blueValue.value)

    ImageButton:
        id: animatedImage
        size: 200, 200
        pos: 500, 375
        on_press: root.image_transition_anim_back()